@model PersonalPlanner.Models.TarefaViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("CadastrarTarefa", "Home"))
{
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            @Html.TextBoxFor(m => m.Titulo, new { placeholder = "Tarefa", @class = "form-control" })
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            @Html.DropDownListFor(m => m.ProjetoId, Model.Projetos, new { @class = "form-control" })
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
            @Html.TextBoxFor(m => m.DataEntrega, new { @class = "datepicker form-control", @type = "date" })
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.TextAreaFor(m => m.Descricao, new { placeholder = "Descrição", style = "width:100%; resize: none;", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button class="btn btn-success" style="width:100%">Gravar</button>
        </div>
    </div>
}