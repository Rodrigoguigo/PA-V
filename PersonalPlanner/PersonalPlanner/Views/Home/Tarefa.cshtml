
@{
                /**/

                Layout = null;
}

@using (Html.BeginForm("CadastrarTarefa", "Home"))
{
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            @Html.TextBox("txtTarefa", string.Empty, new { placeholder = "Tarefa" })
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            @Html.TextBox("teste")
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
            @Html.TextBox("txtDataEntrega", string.Empty, new { @class = "datepicker", @type = "date" })
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @Html.TextArea("txtDescricao", new { placeholder = "Descrição", style = "width:100%; resize: none;" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button class="btn btn-success" style="width:100%">Gravar</button>
        </div>
    </div>
}