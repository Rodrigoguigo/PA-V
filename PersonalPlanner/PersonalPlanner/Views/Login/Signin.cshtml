@{
    Layout = "_LayoutLogin.cshtml"; ;
}

@using (Html.BeginForm("Cadastrar", "Login"))
{
    <div class="row">
        <div class="col-12">
            <h1>Cadastro de Usuário</h1>
        </div>
    </div>
    <div class="row" style="margin-bottom:20px; margin-top:40px;">
        <div class="col-lg-8 col-md-4 col-sm-4 col-xs-10 col-lg-offset-2 col-md-offset-4 col-sm-offset-4 col-xs-offset-1">
            @Html.TextBox("txtUsuario", string.Empty, new { placeholder = "Usuário", @class = "form-control center-block" })
        </div>
    </div>
    <div class="row" style="margin-bottom:20px">
        <div class="col-lg-8 col-md-4 col-sm-4 col-xs-10 col-lg-offset-2 col-md-offset-4 col-sm-offset-4 col-xs-offset-1">
            @Html.TextBox("txtEmail", string.Empty, new { placeholder = "E-mail (Opcional)", @class = "form-control center-block" })
        </div>
    </div>
    <div class="row" style="margin-bottom:20px;">
        <div class="col-lg-8 col-md-4 col-sm-4 col-xs-10 col-lg-offset-2 col-md-offset-4 col-sm-offset-4 col-xs-offset-1">
            @Html.TextBox("txtSenha", string.Empty, new { placeholder = "Senha", @class = "form-control center-block", @type = "password" })
        </div>
    </div>
    <div class="row" style="margin-bottom:20px;">
        <div class="col-lg-8 col-md-4 col-sm-4 col-xs-10 col-lg-offset-2 col-md-offset-4 col-sm-offset-4 col-xs-offset-1">
            @Html.TextBox("txtConfirmarSenha", string.Empty, new { placeholder = "Confirmar senha", @class = "form-control center-block", @type = "password" })
        </div>
    </div>
    <div class="row" style="margin-top:50px">
        <button class="btn btn-success col-lg-6 col-md-4 col-sm-4 col-xs-10 col-lg-offset-3 col-md-offset-4 col-sm-offset-4 col-xs-offset-1">Cadastrar</button>
    </div>
}
